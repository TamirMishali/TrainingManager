<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Routine.ShowRoutines"
            android:launchMode="singleTop"/>
        <activity android:name=".Routine.AddEditRoutineActivity"
            android:parentActivityName=".Routine.ShowRoutines"
            android:launchMode="singleTop"/>
        <activity android:name=".Workout.ShowRoutineWorkouts"></activity>
        <activity android:name=".Workout.AddEditWorkoutActivity"
            android:parentActivityName=".Workout.ShowRoutineWorkouts"></activity>
        <activity android:name=".ExerciseAbstract.ShowWorkoutAbstractExercises"></activity>
        <activity android:name=".ExerciseAbstract.ShowAllAbstractExercises"></activity>
        <activity android:name=".ExerciseAbstract.AddEditExerciseAbsActivity"
            android:parentActivityName=".ExerciseAbstract.ShowAllAbstractExercises"></activity>
        <activity android:name=".WorkoutNow"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".History.History"></activity>
        <activity android:name=".History.ViewPracticalWorkouts"></activity>
        <activity android:name=".History.ViewOldWorkout"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>