<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddEditRoutineActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_black"
        android:text="Title"
        android:textAppearance="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_routine_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mass, Fit etc"
        android:textSize="20dp"
        android:inputType="text"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_black"
        android:text="Date"
        android:textAppearance="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_routine_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="Select Date"
        android:textSize="20dp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_black"
        android:gravity="center"
        android:paddingTop="35dp"
        android:text="Workouts"
        android:textAppearance="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>